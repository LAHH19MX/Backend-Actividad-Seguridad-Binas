generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENTE
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  phone           String   @unique
  name            String
  password        String
  role            Role     @default(CLIENTE)
  isVerified      Boolean  @default(false)
  isBlocked       Boolean  @default(false)
  blockedUntil    DateTime?
  failedAttempts  Int      @default(0)
  
  resetToken      String?   
  resetId         String?   
  resetTokenExpiry DateTime? 

  verificationId       String?    
  verificationIdExpiry DateTime?

  recoveryAttempts Int      @default(0) 
  recoveryBlockedUntil DateTime?
  securityQuestion    String?   
  securityAnswer      String? 

  securityAnswerAttempts Int   @default(0) // Intentos fallidos de respuesta
  securityAnswerBlockedUntil DateTime? // Bloqueo por intentos fallidos
  sessions          Session[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  verificationCodes VerificationCode[]
  loginAttempts     LoginAttempt[]

  @@map("users")
}

enum CodeType {
  REGISTRATION_EMAIL
  REGISTRATION_SMS
  TWO_FACTOR
  PASSWORD_RESET
}

model VerificationCode {
  id          String    @id @default(uuid())
  userId      String
  code        String
  type        CodeType
  expiresAt   DateTime
  isUsed      Boolean   @default(false)
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_codes")
}

model LoginAttempt {
  id          String   @id @default(uuid())
  userId      String?
  email       String
  ipAddress   String?
  userAgent   String?
  success     Boolean
  failReason  String?
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("login_attempts")
}

model Session {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  jti         String   @unique  // JWT ID Ãºnico
  token       String   @unique  // Hash del JWT completo
  deviceInfo  String?
  ipAddress   String?
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  revokedAt   DateTime?
  isRevoked   Boolean  @default(false)
  
  @@index([userId])
  @@index([jti])
  @@index([isRevoked])
  @@map("sessions")
}